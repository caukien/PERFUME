    <!-- Featured Products -->

    <div class="small-container">
        <h2 class="title">Featured Products</h2>
        <div class="row">
            <% if(data !=''){%>
                <% data.forEach(element => {  %>
            <div class="col-4">
                <a href="/product/<%= element._id %>"><img src="http://localhost:3000/<%= element.image %>"></a>
                <h4><%= element.name %></h4>
                <div class="rating">
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star-o"></i>
                </div>
                <p><%= element.price.toLocaleString() %> VND</p>
            </div>
            <% }) }%>
        </div>
    </div>

    <!-- Offer -->
    <div class="offer">
        <div class="small-container">
            <div class="row">
                <div class="col-2">
                    <img src="image/assets/logo3.png" class="offer-img">
                </div>
                <div class="col-2">
                    <p>Exclusively Available on RedStore</p>
                    <h1>Profumo D'Vuiton</h1>
                    <small>Néroli Portofino est un parfum enivrant qui capture l'esprit rafraîchissant et 
                        luxueux de la côte italienne. Cette fragrance offre un mélange subtil de néroli, 
                        de citron sicilien, de bergamote, et d'ambre blanc, créant une expérience olfactive riche et 
                        lumineuse qui évoque le glamour méditerranéen.<br></small>
                    <a href="/product" class="btn">Buy Now &#8594;</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Testimonial -->
