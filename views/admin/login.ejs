</head>
<body>
<div class="wrapper fadeInDown">
  <div id="formContent">
    <!-- Tabs Titles -->

    <!-- Icon -->
    <div class="fadeIn first">
      <img src="https://img.icons8.com/doodle/512/user.png" id="icon" alt="User Icon" />
    </div>

    <!-- Login Form -->
    <form action ="/login" method="POST" enctype="application/x-www-form-urlencoded">
      
      <input type="text" id="username" class="fadeIn second" name="username" value="longngheo" placeholder="Tên đăng nhập">
      <input type="text" id="password" class="fadeIn third" name="password" value="long12345" placeholder="Mật khẩu">


      <input type="submit" class="fadeIn fourth" value="Log In">
    </form>

    <!-- Remind Passowrd -->
